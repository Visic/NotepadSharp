<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NotepadSharp">
    <Style x:Key="TextBox_NoBorder" TargetType="{x:Type TextBoxBase}">
        <Setter Property="Template" Value="{StaticResource TextboxNoBorderTemplate}"/>
    </Style>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
    </Style>

    <Style x:Key="Button_WithBorder" TargetType="{x:Type Button}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template" Value="{StaticResource ButtonWithBorderTemplate}"/>
    </Style>
</ResourceDictionary>