<Window x:Class="NotepadSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotepadSharp"
        Title="Notepad#"
        MinHeight="600"
        MinWidth="800"
        KeyboardNavigation.DirectionalNavigation="Once"
        KeyboardNavigation.TabNavigation="None"
        KeyboardNavigation.ControlTabNavigation="None"
        Height="{Binding Height.Value, Mode=TwoWay}" 
        Width="{Binding Width.Value, Mode=TwoWay}"
        Top="{Binding Top.Value, Mode=TwoWay}"
        Left="{Binding Left.Value, Mode=TwoWay}"
        WindowState="{Binding WindowState.Value, Mode=TwoWay}">
    <Grid>
        <ContentControl Content="{Binding ActiveViewModel}"/>
    </Grid>
</Window>
