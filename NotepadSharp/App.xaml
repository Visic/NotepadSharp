<Application x:Class="NotepadSharp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NotepadSharp"
             Startup="App_Startup"
             DispatcherUnhandledException="OnUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPFUtility;component/VVMAssociations.xaml"/>
                <ResourceDictionary Source="VVMAssociations.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:PrettyPrintKeyBindingConverter x:Key="PrettyPrintKeyBindingConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
